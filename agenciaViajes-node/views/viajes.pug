extends ./layout/index
block contenido
    h1(class="mt-5 text-center") #{page}
    main.container.mt-5
        div.row.proximos-viajes

            each travel in travels
                div.col-md-6.col-lg-4.mb-4
                    .card
                        img(src=`img/destinos_${travel.imagen}.jpg`, alt="", class=``)

                        .card.body
                            h2= travel.titulo
                            p 
                                svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                    path(d='M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z')
                                    path(d='M16 3v4')
                                    path(d='M8 3v4')
                                    path(d='M4 11h16')
                                    path(d='M7 14h.013')
                                    path(d='M10.01 14h.005')
                                    path(d='M13.01 14h.005')
                                    path(d='M16.015 14h.005')
                                    path(d='M13.015 17h.005')
                                    path(d='M7.01 17h.005')


                                | #{travel.fecha_ida} - #{travel.fecha_vuelta}
                            p 
                                svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                    path(d='M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                                    path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                                    path(d='M16 3.13a4 4 0 0 1 0 7.75')
                                    path(d='M21 21v-2a4 4 0 0 0 -3 -3.85')

                                | #{travel.disponibles} Availables

                            p= travel.descripcion.substr(0,100) + '...'

                            a(href=`viajes/${travel.slug}`, class='btn btn-success btn-block') goes to more information 

